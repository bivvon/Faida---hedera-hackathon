{
  "name": "faida-backend",
  "version": "1.0.0",
  "description": "Backend service for the Faida application on Hedera Network",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --config jest.integration.config.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "docs": "swagger-jsdoc -d swaggerDef.js -o swagger.json",
    "security-check": "npm audit && snyk test"
  },
  "dependencies": {
    "@hashgraph/sdk": "^2.24.0",
    "express": "^4.18.2",
    "dotenv": "^16.3.1",
    "mongoose": "^7.5.0",
    "redis": "^4.6.8",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "web3": "^4.2.1",
    "ethers": "^6.7.0",
    "socket.io": "^4.7.2",
    "axios": "^1.5.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "nodemon": "^3.0.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "snyk": "^1.1260.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js",
      "!src/config/**"
    ]
  }
} 